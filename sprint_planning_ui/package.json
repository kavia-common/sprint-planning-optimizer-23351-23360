{
  "name": "sprint_planning_ui",
  "version": "0.1.0",
  "private": true,
  "description": "Frontend interface for AI-driven sprint planning with backlog management, effort prediction visualization, and integration configuration.",
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src --max-warnings=0",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx src --fix",
    "format": "prettier \"**/*.{js,jsx,ts,tsx,json,md,css,scss,html}\" --write",
    "format:check": "prettier \"**/*.{js,jsx,ts,tsx,json,md,css,scss,html}\" --check",
    "prepare": "husky install || echo \"husky not installed\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.3.3"
  }
}
